{{>sidebar}}

<div class="col-8 mx-auto">
  <div class="card">
    <div class="card-header">
      <h2 class="crud-h2" >Editar Producto</h2>
      <div class="card-body">
        <form action="/producto/{{producto._id}}?_method=PUT" method="POST">
          <input type="hidden" name="_method" value="PUT">
          <div class="form-group">
            <input type="text" name="nombreDelPan" class="form-control" placeholder="nombre pan:" autofocus value="{{producto.nombreDelPan}}">
          </div>
          <div class="crud-display form-group">
            <input type="text" name="saborDePan" class="menu-left form-control" placeholder="sabor pan:" value="{{producto.saborDePan}}" >
          </div>
          <div class="crud-display form-group">
            <input type="text" name="cantidadPanes" class="form-control" placeholder="cantidad panes:" autofocus value="{{producto.cantidadPanes}}">
          </div>
          <div class="form-group">
            <input type="text" name="estadoVenta" class="form-control" placeholder="estado venta:" autofocus value="{{producto.estadoVenta}}">
          </div>
          <div class="form-group">
            <input type="text" name="fechaIngresoProducto" class="form-control" placeholder="estado venta:" autofocus value="{{producto.fechaIngresoProducto}}">
          </div>
          <input class="btn btn-success btn-block" type="submit" value="Actualizar">
        </form>
      </div>
    </div>
  </div>
</div>